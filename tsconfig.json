{
  "compilerOptions": {
    "types": [
      "bun-types"
    ],
    "target": "ESNext",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/core/*": [
        "src/core/*"
      ],
      "@/infrastructure/*": [
        "src/infrastructure/*"
      ]
    }
  }
}